extends ../layout

block content
    h2 Login page

    form(action='/login' method='post')
        .form-row
            label(for='login') Login
            input(type='text', name='login', id='login')
        .form-row
            label(for='password') Password
            input(type='password', name='password', id='password')
        .form-row
            button(type='submit') Submit

    .user= user